{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Backend (main.js)",
            "program": "${workspaceFolder}/backend/main.js",
            "envFile": "${workspaceFolder}/backend/.env",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": ["--no-warnings"], // Optional: to silence ESM warnings
            "console": "integratedTerminal"
        }
    ]
}